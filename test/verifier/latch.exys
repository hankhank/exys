(begin
    (input in)
    (input gate)

    (define latch
        (lambda (gate in)
            (begin
                (defvar val 0)
                (define ret (? gate in val))
                (set! val ret)
                ret)))

    (observe out (latch gate in)))

(test test-1
    (inject in 1)
    (inject gate 1)
    (stabilize)
    (expect out 1)

    (inject in 2)
    (inject gate 0)
    (stabilize)
    (expect out 1)

    (inject gate 1)
    (stabilize)
    (expect out 2))
