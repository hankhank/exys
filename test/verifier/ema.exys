(begin

    (input in)
    (input gate)
       
    (define ema
        (lambda (alpha gate signal)
            (begin
                (defvar oldma 0)
                (define newma (? (== oldma 0) signal (+ (* alpha signal) (* (- 1 alpha) oldma))))
                (set! oldma (? gate newma oldma)))))

    (observe emaOut (ema 0.5 gate in)))

(test Gate-Off
    (inject in 1)
    (inject gate 0)
    (stabilize)
    (expect emaOut 0)
)

(test Gate-On
    (inject in 1)
    (inject gate 1)
    (stabilize)
    (expect emaOut 1)

    (inject in 1)
    (stabilize)
    (expect emaOut 1)

    (inject in 2)
    (stabilize)
    (expect emaOut 1.5)

    (inject in 2)
    (stabilize)
    (stabilize)
    (stabilize)
    (stabilize)
    (expect emaOut 1.968750)

    (inject gate 0)
    (stabilize)
    (expect emaOut 1.968750)
)
